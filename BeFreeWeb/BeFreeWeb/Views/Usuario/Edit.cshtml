@model BeFreeWeb.Models.Usuario

@{
    ViewBag.Title = "Edit";
}

<div class="content-inner">
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Editar Usuário</h2>
        </div>
    </header>
    <ul class="breadcrumb">
        <div class="container-fluid">
            <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
            <li class="breadcrumb-item active">Editar</li>
        </div>
    </ul>
    <!-- Forms Section-->
    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <!-- Form Elements -->
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Editar Usuario</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Edit", "Usuario", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <form class="form-horizontal">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.idUsuario)
                                    @Html.HiddenFor(model => model.idCidade)
                                    @Html.HiddenFor(model => model.idEstado)
                                    @Html.HiddenFor(model => model.bairro)
                                    @Html.HiddenFor(model => model.logradouro)
                                    @Html.HiddenFor(model => model.numero)
                                    @Html.HiddenFor(model => model.cep)
                                    @Html.HiddenFor(model => model.dataCadastro)
                                    @Html.HiddenFor(model => model.dataNascimento)
                                    @Html.HiddenFor(model => model.ativo)
                                    @Html.HiddenFor(model => model.senha)
                                    @Html.HiddenFor(model => model.codigoSeguranca)
                                    @Html.HiddenFor(model => model.imagemPerfil)

                                    <div class="form-group row" style="height:auto">
                                        <div class="col-sm-9" style="height:auto">


                                            <div align="center">
                                                <img src=@Model.imagemPerfil alt="..." style="height:300px;width:300px;align-self:center">
                                            </div>
                                            <div class="line"></div>

                                            <div class="form-group row">
                                                @Html.LabelFor(model => model.nomeUsuario, new { @class = "col-sm-3 form-control-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(model => model.nomeUsuario, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="line"></div>

                                            <div class="form-group row">
                                                @Html.LabelFor(model => model.cpf, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                <div class="col-sm-9">
                                                    @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="line"></div>

                                            <div class="form-group row">
                                                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                <div class="col-sm-9">
                                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="line"></div>

                                            <div class="form-group row">
                                                @Html.LabelFor(model => model.ddd, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                <div class="col-sm-9">
                                                    @Html.EditorFor(model => model.ddd, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="line"></div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-sm-9">
                                                    <input type="submit" value="Save" class="btn btn-default" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>