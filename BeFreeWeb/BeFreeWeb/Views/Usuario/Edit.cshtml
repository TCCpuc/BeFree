                            <h3 class="h4">All form elements</h3>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal">
                                <div class="line"> </div>
                                <div class="row">
                                    <label class="col-sm-3 form-control-label">Material Inputs</label>
                                    <div class="row">
                                        <div class="col-sm-9">

                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()

                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.idUsuario)

                                                <div class="form-group-material">
                                                    @Html.TextBoxFor(model => model.nomeUsuario, new { @class = "input-material" })
                                                    @Html.LabelFor(model => model.nomeUsuario, new { @class = "label-material" })
                                                    @Html.ValidationMessageFor(model => model.nomeUsuario, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group-material">
                                                    @Html.LabelFor(model => model.cpf, htmlAttributes: new { @class = "control-label col-md-2" })
