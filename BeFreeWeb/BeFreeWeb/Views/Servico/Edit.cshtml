@model BeFreeWeb.Models.Servico
@{
    ViewBag.Title = "Edit";
}

<div class="content-inner">
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Editar Serviço</h2>
        </div>
    </header>
    <ul class="breadcrumb">
        <div class="container-fluid">
            <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
            <li class="breadcrumb-item active">Editar</li>
        </div>
    </ul>
    <!-- Forms Section-->
    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <!-- Form Elements -->
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Editar Serviço</h3>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal">
                                <div class="form-group row">
                                    <div class="col-sm-9">

                                        @using (Html.BeginForm("Edit", "Usuario", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.idServico)
                                            @Html.HiddenFor(model => model.idStatus);
                                            @Html.HiddenFor(model => model.idSubCategoria)
                                            @Html.HiddenFor(model => model.idUsuario)
                                            <div align="center">

                                                <img src=@Model.imagemServico alt="..." style="height:300px;width:auto;align-self:center">

                                            </div>
                                                    <div class="line"></div>

                                                    <div class="form-group row">
                                                        @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                        <div class="col-sm-9">
                                                            @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                    <div class="line"></div>

                                                    <div class="form-group row">
                                                        @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                        <div class="col-sm-9">
                                                            @Html.EditorFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                    <div class="line"></div>

                                                    <div class="form-group row">
                                                        @Html.LabelFor(model => model.idDDD, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
                                                        <div class="col-sm-9">
                                                            @Html.EditorFor(model => model.idDDD, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                    <div class="line"></div>

                                                    <div class="form-group row">
                                                        <div class="col-md-offset-2 col-sm-9">
                                                            <input type="submit" value="Save" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                        }

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>