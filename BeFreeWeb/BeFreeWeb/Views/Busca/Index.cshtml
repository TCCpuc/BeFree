@model IEnumerable<BeFreeWeb.Models.Busca>
@{
    ViewBag.Title = "Busca";
}
<html>
<head>
</head>
<body>

    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid">
                <h2 class="no-margin-bottom">Buscas</h2>
            </div>
        </header>
        <!-- Breadcrumb-->
        <ul class="breadcrumb">
            <div class="container-fluid">
                <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                <li class="breadcrumb-item active">Buscas</li>
            </div>
        </ul>
        <section class="tables">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card" style="width:800px; height:auto;">
                            <div class="card-header d-flex align-items-center">
                                <h3 class="h4">Buscas</h3>
                            </div>
                            <div class="card-body">

                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.titulo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.descricao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.idDDD)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.titulo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.descricao)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idDDD)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.idBusca }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.idBusca })
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>