@model IEnumerable<BeFreeWeb.Models.Denuncia>

@{
    ViewBag.Title = "Denuncia";
}

<html>
<head>
</head>
<body>
    <div class="content-inner">
        <!-- Page Header-->
        <header class="page-header">
            <div class="container-fluid">
                <h2 class="no-margin-bottom">Usuários</h2>
            </div>
        </header>
        <!-- Breadcrumb-->
        <ul class="breadcrumb">
            <div class="container-fluid">
                <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                <li class="breadcrumb-item active">Usuários</li>
            </div>
        </ul>
        <section class="tables">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card" style="width:200%; height:auto;">
                            <div class="card-header d-flex align-items-center">
                                <h3 class="h4">Usuários</h3>
                            </div>
                            <div class="card-body">
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.causa)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.idServico)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.idBusca)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.idUsuarioDenunciante)
                                            </th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.causa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idServico)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idBusca)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idUsuarioDenunciante)
                                                </td>
                                            </tr>
                                        }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>
</html>