<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_shap"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_insert_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Inserir Imagem"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <tcc.befree.models.CircleImageView
        android:id="@+id/dialog_insert_image_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera_alt_48px"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:civ_border_color="@color/dark_gray"
        app:civ_border_width="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">


        <Button
            android:id="@+id/dialog_insert_image_ok"
            android:layout_gravity="left"
            android:background="@drawable/curve_shap"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="OK" />


    </LinearLayout>


</LinearLayout>