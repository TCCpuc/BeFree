<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/item_service_background"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <tcc.befree.models.CircleImageView
            android:id="@+id/img_anuncio"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/pedreiro_perfil"
            app:civ_border_color="@color/dark_gray"
            app:civ_border_width="0dp" />
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_service_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                tools:text="Pedreiro" />

            <TextView
                android:id="@+id/item_service_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:textSize="14sp"
                tools:text="Preciso de pedreiro!" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_service_edit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="2dp">

            <ImageButton
                android:id="@+id/item_service_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_white"
                android:src="@android:drawable/ic_menu_manage"
                android:layout_marginLeft="10dp"/>

            <ImageButton
                android:id="@+id/item_service_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_white"
                android:src="@android:drawable/ic_notification_clear_all"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_service_default_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/service_star_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_star_black_18dp" />

                <ImageView
                    android:id="@+id/service_star_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_star_black_18dp" />

                <ImageView
                    android:id="@+id/service_star_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_star_half_black_18dp" />

                <ImageView
                    android:id="@+id/service_star_4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_star_border_black_18dp" />

                <ImageView
                    android:id="@+id/service_star_5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_star_border_black_18dp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluation Rate"
                android:textSize="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/item_service_evaluation_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:textAlignment="center"
                android:ems="10"
                android:textSize="25dp"
                android:text="5,5"
                android:inputType="numberDecimal" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#c2c2c2" />
</LinearLayout>