<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/calendarioVt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="40dp"
            android:text="Voltar"
            android:layout_below="@+id/calendarView"
            android:layout_alignLeft="@+id/calendarView"
            android:layout_alignStart="@+id/calendarView" />

        <Button
            android:id="@+id/calendarioAg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/calendarView"
            android:layout_alignRight="@+id/calendarView"
            android:layout_alignTop="@+id/calendarioVt"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:text="Agendar" />

    </RelativeLayout>
</LinearLayout>