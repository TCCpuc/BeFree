<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_shap"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_anuncio_denuncia_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:text="NOME DO ANUNCIO"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <tcc.befree.models.CircleImageView
        android:id="@+id/dialog_anuncio_denuncia_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera_alt_48px"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:civ_border_color="@color/dark_gray"
        app:civ_border_width="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Denúncia"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/dialog_anuncio_denuncia_denuncia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_white"
        android:hint="Digite aqui sua denúncia"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:textSize="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">


        <Button
            android:id="@+id/dialog_anuncio_denuncia_back"
            android:layout_gravity="left"
            android:background="@drawable/curve_shap"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dp"
            android:text="VOLTAR" />

        <Button
            android:id="@+id/dialog_anuncio_denuncia_send"
            android:layout_gravity="left"
            android:background="@drawable/curve_shap"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="13dp"
            android:layout_marginLeft="3dp"
            android:padding="2dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="DENUNCIAR" />

    </LinearLayout>

</LinearLayout>